<h1>Listing users</h1>

<table>

  <div class="container">            
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th></th>
          <th></th>          
        </tr>
      </thead>
      <tbody>
       <% @users.each do |user| %>
       <tr>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
        <td><%= link_to 'Delete', user, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

</table>

