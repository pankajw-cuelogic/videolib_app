
<%= form_for @video, url: newvideo_path(@video) do |f|  %>
<% if @video.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

  <ul>
    <% @video.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %> 

<body>
  <div class="container">
    <h2>new video form</h2>
    <form class="form-horizontal">

      <div class="form-group">
        <label class="control-label col-sm-2" for="video_title"> <%= f.label :video_title %></label>
        <div  >
          <%= f.text_field :video_title %>          
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="category_name"> <%= f.label :category %></label>
        <div >
          <%= f.collection_select(:category_id, Category.all, :id, :category_name)  %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="item_video"> <%= f.label :item_video %> </label>
        <div>
          <%= f.file_field :item_video %>
        </div>
      </div> 

      <div class="form-group">
        <label class="control-label col-sm-2" for="composer"> <%= f.label :composer %> </label>
        <div>
          <%= f.text_field :composer %>       
        </div>
      </div> 

      <div class="form-group">
        <label class="control-label col-sm-2" for="is_available"> <%= f.label :is_available %> </label>
        <div  >
         <%= f.check_box :is_available %>
       </div>
     </div>
     <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit %>
      </div>
    </div>
  </form>
</div>
</body>

<% end %>